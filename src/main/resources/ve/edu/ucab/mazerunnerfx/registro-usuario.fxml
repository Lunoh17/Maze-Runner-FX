<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.image.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>

<AnchorPane prefHeight="402.0" prefWidth="635.0" scaleShape="false" xmlns="http://javafx.com/javafx/17.0.12" xmlns:fx="http://javafx.com/fxml/1" fx:controller="ve.edu.ucab.mazerunnerfx.RegistroUsuarioController">
   <children>
      <ImageView fitHeight="402.0" fitWidth="659.0">
         <image>
            <Image url="@../../../../misc/inicioSesionIMG.jpg" />
         </image>
      </ImageView>
      <AnchorPane layoutX="8.0" prefHeight="402.0" prefWidth="300.0">
         <children>
            <ImageView fitHeight="312.0" fitWidth="300.0" layoutX="10.0" layoutY="30.0" opacity="0.65" pickOnBounds="true">
               <image>
                  <Image url="@../../../../misc/whiteBlock.png" />
               </image>
            </ImageView>
            <Button fx:id="registroButton" disable="true" layoutX="27.0" layoutY="276.0" mnemonicParsing="false" onAction="#onRegistro" text="Registrarse">
               <font>
                  <Font size="16.0" />
               </font>
               <cursor>
                  <Cursor fx:constant="HAND" />
               </cursor>
            </Button>
            <Label layoutX="24.0" layoutY="133.0" prefHeight="17.0" prefWidth="106.0" text="Contraseña">
               <font>
                  <Font size="16.0" />
               </font>
            </Label>
            <TextField fx:id="email" layoutX="22.0" layoutY="95.0" prefHeight="25.0" prefWidth="257.0" promptText="ej. name@mail.com">
               <font>
                  <Font size="14.0" />
               </font>
            </TextField>
            <!-- Inline error label for email -->
            <Label fx:id="emailError" layoutX="22.0" layoutY="125.0" prefHeight="16.0" prefWidth="257.0" style="-fx-text-fill: red; -fx-font-size: 11px;" text="" />
            <PasswordField fx:id="password" layoutX="24.0" layoutY="169.0" prefHeight="25.0" prefWidth="194.0" />
            <!-- Inline error label for password -->
            <Label fx:id="passwordError" layoutX="24.0" layoutY="199.0" prefHeight="16.0" prefWidth="257.0" style="-fx-text-fill: red; -fx-font-size: 11px;" text="" />
            <Label layoutX="22.0" layoutY="58.0" text="Correo">
               <font>
                  <Font size="16.0" />
               </font>
            </Label>
            <PasswordField fx:id="confirmPassword" layoutX="24.0" layoutY="228.0" prefHeight="25.0" prefWidth="194.0" />
            <!-- Inline error label for confirm password -->
            <Label fx:id="confirmPasswordError" layoutX="24.0" layoutY="258.0" prefHeight="16.0" prefWidth="257.0" style="-fx-text-fill: red; -fx-font-size: 11px;" text="" />
            <Label layoutX="24.0" layoutY="201.0" text="Repita su contraseña">
               <font>
                  <Font size="16.0" />
               </font>
            </Label>
            <Button fx:id="regreso" layoutX="151.0" layoutY="276.0" mnemonicParsing="false" onAction="#onRegreso" text="Regresar">
               <font>
                  <Font size="16.0" />
               </font>
            </Button>
         </children>
      </AnchorPane>
   </children>
</AnchorPane>
