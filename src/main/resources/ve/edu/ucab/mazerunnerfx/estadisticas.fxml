<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.geometry.*?>

<BorderPane xmlns="http://javafx.com/javafx" xmlns:fx="http://javafx.com/fxml"
            fx:controller="ve.edu.ucab.mazerunnerfx.EstadisticasController"
            prefWidth="800" prefHeight="600">
    <top>
        <HBox spacing="12" alignment="CENTER_LEFT" style="-fx-padding:12;">
            <children>
                <Label text="Estadísticas de partidas" style="-fx-font-size:18px; -fx-font-weight:bold;" />
                <Label fx:id="usuarioLabel" text="(usuario)" />
            </children>
        </HBox>
    </top>

    <center>
        <TableView fx:id="recordsTable" prefWidth="760" prefHeight="480" BorderPane.alignment="CENTER">
            <columns>
                <TableColumn fx:id="dateCol" text="Fecha" prefWidth="240" />
                <TableColumn fx:id="durationCol" text="Duración" prefWidth="120" />
                <TableColumn fx:id="scoreCol" text="Puntaje" prefWidth="120" />
                <TableColumn fx:id="resultCol" text="Resultado" prefWidth="120" />
            </columns>
        </TableView>
    </center>

    <bottom>
        <HBox alignment="CENTER_RIGHT" spacing="10" style="-fx-padding:12;">
            <children>
                <Button text="Regresar" onAction="#onRegresar" />
            </children>
        </HBox>
    </bottom>
</BorderPane>
